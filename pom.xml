<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.avicus</groupId>
  <artifactId>compendium</artifactId>
  <version>1.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <modules>
    <module>Core</module>
    <module>Bukkit</module>
    <module>Bungee</module>
  </modules>

  <!-- Version Control -->
  <scm>
    <connection>scm:git://github.com/ProjNebula/Compendium.git</connection>
    <developerConnection>scm:git:ssh://github.com/ProjNebula/Compendium.git</developerConnection>
    <url>https://github.com/ProjNebula/Compendium</url>
  </scm>

  <!-- Deployment -->
  <distributionManagement>
    <repository>
      <id>mcnebula-repo-releases</id>
      <url>https://repo.mcnebula.net/releases</url>
    </repository>
    <snapshotRepository>
      <id>mcnebula-repo-snapshots</id>
      <url>https://repo.mcnebula.net/snapshots</url>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>bungeecord-repo</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
    <repository>
      <id>mcnebula-repo-snapshots</id>
      <url>https://repo.mcnebula.net/snapshots</url>
    </repository>
    <repository>
      <id>mcnebula-repo-releases</id>
      <url>https://repo.mcnebula.net/releases</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.30</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <annotationProcessorPaths>
            <path>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
              <version>1.18.30</version>
            </path>
          </annotationProcessorPaths>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
